@model AngularMVC.DAL.Property_Detail

@{
    ViewBag.Title = "DetailBidders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="cart_items">
    <div class="row" style="margin-left:100px;margin-right:100px;">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li><a href="#">Property</a></li>
                <li><a href="@Url.Action("Detail", "Property", new { area = "", id = Model.PropertyId})">@Model.Title</a></li>
                <li class="active">Bidders</li>
            </ol>
        </div><!--/breadcrums-->


        <div class="review-payment">
            <h2><b>No of Bidders </b><span class="badge">@ViewBag.Bidders.Count</span></h2>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed table-hover table-bordered table-responsive">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">User</td>
                        <td class="description">Bidding Price</td>
                        <td class="description">Date</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Bidders)
                    {
                        <tr>
                            <td class="description">
                                <h3>@item.FName @item.MName @item.LName</h3>

                            </td>
                            <td class="cart_description">

                                <p>Price: NPR. @item.Price</p>
                            </td>
                            <td class="cart_description">

                                <p><i class="fa fa-calendar">&nbsp;</i> @Convert.ToDateTime(item.PostedOn).ToShortDateString()</p>
                            </td>
                            
                        </tr>
                                    }

                </tbody>
            </table>
        </div>

    </div>
</section>

