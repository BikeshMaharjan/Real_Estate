@model IEnumerable<AngularMVC.DAL.Property_Detail>

@foreach (var item in Model)
{
    <div class="col-sm-4">
        <div class="product-image-wrapper">
            <div class="single-products">
                <div class="productinfo text-center">
                    <img src="~/Upload/Property/thumb/@item.img1" alt="" />
                    <h2>Rs. @item.Price</h2>
                    <p>@item.Title</p>
                    <p>@item.District</p>
                    <a href="@Url.Action("Detail", "Property", new { area = "", id = item.PropertyId})" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>SOLD</a>
                </div>
                <div class="product-overlay">
                    <div class="overlay-content">
                        <h2>Rs. @item.Price</h2>
                        <p>@item.Title</p>

                        <a href="@Url.Action("Detail", "Property", new { area = "", id = item.PropertyId})"
                           class="btn btn-default add-to-cart">
                            <i class="fa fa-shopping-cart">
                            </i>SOLD
                        </a>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
}